{
  "name": "steel-browser-api",
  "version": "1.0.0",
  "description": "Steel Browser API Server",
  "main": "build/index.js",
  "scripts": {
    "start": "node build/index.js",
    "build": "tsc && mkdir -p build/scripts && cp src/scripts/record.umd.min.cjs build/scripts/",
    "dev": "ts-node-dev --poll --exit-child ./src/index.ts",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "pretty": "prettier --write \"src/**/*.ts\"",
    "generate:openapi": "ts-node ./openapi/generate.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "test:auth": "jest --testPathPattern=auth",
    "db:migrate": "prisma migrate deploy",
    "db:seed": "ts-node prisma/seed.ts",
    "db:reset": "prisma migrate reset --force",
    "db:studio": "prisma studio",
    "pretest": "NODE_ENV=test npm run db:reset",
    "prepare": "npm run build"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "author": "Nasr Mohamed",
  "license": "ISC",
  "dependencies": {
    "@fastify/cors": "^8.4.0",
    "@fastify/http-proxy": "^9.5.0",
    "@fastify/jwt": "^8.0.1",
    "@fastify/oauth2": "^7.8.0",
    "@fastify/sensible": "^4.1.0",
    "@fastify/swagger": "^8.15.0",
    "@fastify/websocket": "^10.0.1",
    "@mozilla/readability": "^0.5.0",
    "@prisma/client": "5.7.1",
    "@scalar/fastify-api-reference": "^1.25.59",
    "dotenv": "^16.4.5",
    "fastify": "^4.15.0",
    "fastify-graceful-shutdown": "^4.0.1",
    "fastify-plugin": "^4.5.1",
    "fastify-zod": "^1.4.0",
    "ioredis": "^5.3.2",
    "rate-limiter-flexible": "^5.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "prettier": "^3.2.5",
    "prisma": "^5.9.1",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.12.0"
  }
}
